@model TaskItem
@{
    ViewData["Title"] = (Model.TaskId == 0) ? "Add Task" : "Edit Task";
}

<div class="container mt-4">
    <h2>@ViewData["Title"]</h2>

    <div asp-validation-summary="All" class="text-danger"></div>

    <form method="post" asp-action="AddEditTask" asp-controller="Home">
        <input type="hidden" asp-for="TaskId" />

        <div class="form-group mb-3">
            <label asp-for="TaskName">Task</label>
            <input asp-for="TaskName" class="form-control" />
        </div>

        <div class="form-group mb-3">
            <label asp-for="DueDate">Due Date</label>
            <input asp-for="DueDate" type="date" class="form-control" />
        </div>

        <!-- Eisenhower Matrix quadrants -->
        <div class="form-group mb-3">
            <label asp-for="Quadrant">Quadrant (1-4)</label>
            <select asp-for="Quadrant" class="form-control">
                <option value="1">1: Important / Urgent</option>
                <option value="2">2: Important / Not Urgent</option>
                <option value="3">3: Not Important / Urgent</option>
                <option value="4">4: Not Important / Not Urgent</option>
            </select>
        </div>

        <div class="form-group mb-3">
            <label asp-for="CategoryId">Category</label>
            <select asp-for="CategoryId" class="form-control">
                <option value="">-- Select Category --</option>
                @foreach (var c in ViewBag.Categories)
                {
                    <option value="@c.CategoryId">@c.CategoryName</option>
                }
            </select>
        </div>

        <div class="form-check mb-3">
            <input asp-for="Completed" class="form-check-input" />
            <label asp-for="Completed" class="form-check-label">Mark as Completed</label>
        </div>

        <button type="submit" class="btn btn-primary">Save Task</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>