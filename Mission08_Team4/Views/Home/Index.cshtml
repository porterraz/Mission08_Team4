@model IEnumerable<TaskItem>
@{
    ViewData["Title"] = "Quadrant View";
}

<div class="container text-center mt-4">
    <div class="row mb-2 font-weight-bold">
        <div class="col-2"></div>
        <div class="col-5 border bg-light p-2">URGENT</div>
        <div class="col-5 border bg-light p-2">NOT URGENT</div>
    </div>

    <div class="row">
        <div class="col-2 border bg-light p-2 d-flex align-items-center justify-content-center font-weight-bold" style="writing-mode: vertical-rl; transform: rotate(180deg);">
            IMPORTANT
        </div>
        
        <div class="col-5 border p-3 text-start">
            <h4>Quadrant 1</h4>
            @foreach (var t in Model.Where(x => x.Quadrant == 1 && x.Completed == false))
            {
                <div class="card mb-2 shadow-sm">
                    <div class="card-body py-2">
                        <h5 class="card-title mb-1">@t.TaskName</h5>
                        <p class="card-text mb-1 small text-muted">Due: @t.DueDate | Category: @t.Category?.CategoryName</p>
                        <div class="d-flex gap-2 mt-2">
                            <a class="btn btn-sm btn-outline-primary" asp-controller="Home" asp-action="Edit" asp-route-id="@t.TaskId">Edit</a>
                            <a class="btn btn-sm btn-outline-danger" asp-controller="Home" asp-action="Delete" asp-route-id="@t.TaskId">Delete</a>
                            <form method="post" asp-controller="Home" asp-action="MarkCompleted" asp-route-id="@t.TaskId">
                                <button type="submit" class="btn btn-sm btn-outline-success">Complete</button>
